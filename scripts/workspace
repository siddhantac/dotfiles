# Workspace script

# Usage function {{{
usage() {
  echo "Usage:"
  echo "  ide up [1 | 2 | 3]"
  echo "  ide down"
  echo "Options:"
  echo "  1  simple layout (1 extra pane) (default)"
  echo "  2  double layout (2 extra panes)"
  echo "  3  extended layout (3 extra panes)"

  exit 1
}
# }}}

# Warning function {{{
warning() {
  echo "Warning:"
  echo "  $1"

  exit 1
}
# }}}

# Check for parameters & TMUX availability {{{
[[ -z $TMUX ]] && warning "Workspace will only work inside a TMUX session!"
[[ "$#" != "1" && "$#" != "2" ]] && usage
# }}}

# Execute commands {{{
case $1 in
  up)
    tmux split-window -v -p 25 
    panes=$2
    [[ -z $panes ]] && panes=1

    case $panes in
      1)
        ;;
      2)
        tmux split-window -hb -p 66
        ;;
      3)
        tmux split-window -hb -p 66
        tmux split-window -hb -p 50
        ;;
    esac

    tmux select-pane -t 2

    exit
    ;;
  down)
    panes=$(tmux list-panes | wc -l | xargs)

    [[ $panes -eq 1 ]] && warning "Cannot teardown a workspace with only 1 pane!"

    for pane in $(seq $panes 2); do
      tmux kill-pane -t $pane
    done

    exit
    ;;
  *)
    usage
    ;;
esac
# }}}

